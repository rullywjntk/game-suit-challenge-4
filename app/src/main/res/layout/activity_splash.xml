<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.splash.SplashActivity">

    <ImageView
        android:id="@+id/ivSplash1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splash_screen1"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/splashscreen1" />

    <ImageView
        android:id="@+id/ivSplash2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splash_screen2"
        app:layout_constraintTop_toBottomOf="@id/ivSplash1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/splashscreen2" />

</androidx.constraintlayout.widget.ConstraintLayout>